<?xml version="1.0" encoding="UTF-8"?>
    <odoo>
        <!--"project.task" -->
        <record id="project_task_form_inherited" model="ir.ui.view">
            <field name="name">project.task.form.inherit</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="hr_timesheet.view_task_form2_inherited"/>
            <field name="arch" type="xml">
                <xpath
                    expr="//field[@name='timesheet_ids']/tree/field[@name='task_id']"
                    position="after">
                    <field name="account_analytic_line_wizard_id" invisible="1"/>
                </xpath>
                <xpath
                    expr="//field[@name='timesheet_ids']/kanban/field[@name='task_id']"
                    position="after">
                    <field name="account_analytic_line_wizard_id" invisible="1"/>
                </xpath>
                <xpath
                    expr="//field[@name='timesheet_ids']/form/sheet/group/field[@name='task_id']"
                    position="after">
                    <field name="account_analytic_line_wizard_id" invisible="1"/>
                </xpath>
            </field>
        </record>
    </odoo>