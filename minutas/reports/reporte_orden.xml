<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <template id="reporte_orden">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="web.external_layout">
                        <div class="page">
                            <table class="table table-borderless">
                                <tr  style="text-align:center;">
                                   <h1>
                                        Orden del día
                                    </h1>
                                </tr>
                            </table>
                            <br/>

                            <table class="table table-borderless">
                                <tr>
                                    <th>
                                        Fecha:
                                    </th>
                                    <td >
                                        <span t-field="o.fecha_hora" />
                                    </td>
                                    <td></td>
                                    <th>
                                        Proyecto:
                                    </th>
                                    <td>
                                        <span t-field="o.proyecto.name" />
                                    </td>
                                </tr>
                                <tr>
                                    <th>
                                        Duración:
                                    </th>
                                    <td>
                                        <span t-field="o.duracion" t-field-options='{"widget": "float_time"}' />
                                    </td>
                                    <td></td>
                                    <th>
                                        Hito:
                                    </th>
                                    <td>
                                        <t t-set="lin" t-value="0" />
                                        <t t-foreach="o.hito" t-as="h">
                                            <t t-if="lin>0"><span>, </span></t>
                                            <span t-esc="h.name" />
                                            <t t-set="lin" t-value="lin + 1" />
                                        </t>
                                    </td>
                                </tr>
                                <tr>
                                    <th>
                                        Sede:
                                    </th>
                                    <td>
                                        <span t-field="o.referencia" />
                                    </td>
                                    <td></td>
                                </tr>
                            </table>
                            <br/>

                            <table class="table">
                                <tr>
                                    <th style="border: 1px solid black;   text-align:center; background-color: #C0C0C0;">
                                        Objetivo
                                    </th>
                                </tr>
                                <tr>
                                    <td style="border: 1px solid black;" >
                                        <span t-field="o.objetivo" />
                                    </td>
                                </tr>
                            </table>
                            <br/>

                            <table class="table" t-if="o.asistencia_lines or o.asistenciain_lines">
                                <tr>
                                    <th colspan="3" style="border: 1px solid black;   text-align:center; background-color: #C0C0C0;">
                                        Asistentes
                                    </th>
                                </tr>
                                <tr>
                                    <th style="border: 1px solid black;   text-align:left; width:60%;">
                                        Nombre
                                    </th>
                                    <th style="border: 1px solid black;   text-align:left; width:20%;">
                                        Puesto
                                    </th>
                                    <th style="border: 1px solid black;   text-align:left; width:20%;">
                                        Empresa
                                    </th>
                                </tr>
                                <t t-set="conta" t-value="1"/>
                                <t t-foreach="o.asistencia_lines" t-as="asl">
                                    <t t-if="(conta % 2) == 0">
                                        <tr>
                                            <td  style="border: 1px solid black; ">
                                                <span t-field="asl.name.name" />
                                            </td>
                                            <td  style="border: 1px solid black; ">
                                                <span t-field="asl.puesto" />
                                            </td>
                                            <td  style="border: 1px solid black; ">
                                                <span t-field="asl.empresa" />
                                            </td>
                                        </tr>
                                    </t>
                                    <t t-if="(conta % 2) == 1">
                                        <tr >
                                            <td  style="border: 1px solid black; ">
                                                <span t-field="asl.name.name" />
                                            </td>
                                            <td  style="border: 1px solid black; ">
                                                <span t-field="asl.puesto" />
                                            </td>
                                            <td  style="border: 1px solid black; ">
                                                <span t-field="asl.empresa" />
                                            </td>
                                        </tr>
                                    </t>
                                    <t t-set="conta" t-value="conta + 1"/>
                                </t>
                                <t t-foreach="o.asistenciain_lines" t-as="asl">
                                    <t t-if="(conta % 2) == 0">
                                        <tr>
                                            <td  style="border: 1px solid black; ">
                                                <span t-field="asl.name.name" />
                                            </td>
                                            <td  style="border: 1px solid black; ">
                                                <span t-field="asl.puesto" />
                                            </td>
                                            <td  style="border: 1px solid black; ">
                                                <span t-field="asl.name.company_id.name" />
                                            </td>
                                        </tr>
                                    </t>
                                    <t t-if="(conta % 2) == 1">
                                        <tr>
                                            <td  style="border: 1px solid black; ">
                                                <span t-field="asl.name.name" />
                                            </td>
                                            <td  style="border: 1px solid black; "> 
                                                <span t-field="asl.puesto" />
                                            </td>
                                            <td  style="border: 1px solid black; ">
                                                <span t-field="asl.name.company_id.name" />
                                            </td>
                                        </tr>
                                    </t>
                                    <t t-set="conta" t-value="conta + 1"/>
                                </t>
                            </table>
                            <br/>

                            <table class="table" t-if="o.activids_lines">
                                <tr>
                                    <th colspan="4" style="border: 1px solid black;  background-color: #C0C0C0;  text-align:center;">
                                        Actividades realizadas
                                    </th>
                                </tr>
                                <tr>
                                    <th style="border: 1px solid black;   text-align:left; width:30%;">
                                        Tarea
                                    </th>
                                    <th style="border: 1px solid black;   text-align:left; width:30%;">
                                        Asignado a
                                    </th>
                                    <th style="border: 1px solid black;   text-align:left; width:20%;">
                                        Fecha límite
                                    </th>
                                    <th style="border: 1px solid black;   text-align:left; width:20%;">
                                        Etapa
                                    </th>
                                </tr>
                                <t t-set="contaa" t-value="1"/>
                                <t t-foreach="o.activids_lines" t-as="acl">
                                    <t t-if="(contaa % 2) == 0">
                                        <tr >
                                            <td  style="border: 1px solid black; ">
                                                <span t-field="acl.name.name" />
                                            </td>
                                            <td  style="border: 1px solid black; ">
                                                <span t-field="acl.name.user_id.name" />
                                            </td>
                                            <td  style="border: 1px solid black; ">
                                                <span t-field="acl.name.date_deadline" />
                                            </td>
                                            <td  style="border: 1px solid black; ">
                                                <span t-field="acl.name.stage_id.name" />
                                            </td>
                                        </tr>
                                    </t>
                                    <t t-if="(contaa % 2) == 1">
                                        <tr >
                                            <td  style="border: 1px solid black; ">
                                                <span t-field="acl.name.name" />
                                            </td>
                                            <td  style="border: 1px solid black; ">
                                                <span t-field="acl.name.user_id.name" />
                                            </td>
                                            <td  style="border: 1px solid black; ">
                                                <span t-field="acl.name.date_deadline" />
                                            </td>
                                            <td  style="border: 1px solid black; ">
                                                <span t-field="acl.name.stage_id.name" />
                                            </td>
                                        </tr>

                                    <t t-set="contaa" t-value="contaa + 1"/>
                                    </t>
                                </t>
                            </table>
                            <br/>

                            <table class="table" t-if="o.actividades_lines">
                                <tr>
                                    <th colspan="2" style="border: 1px solid black; background-color: #C0C0C0;   text-align:center;">
                                        Actividades extra
                                    </th>
                                </tr>
                                <tr>
                                    <th style="border: 1px solid black;   text-align:left; width:80%;">
                                        Actividad
                                    </th>
                                    <th style="border: 1px solid black;   text-align:left; width:20%;">
                                        Estatus
                                    </th>
                                </tr>
                                <t t-set="contaaaa" t-value="1"/>
                                <t t-foreach="o.actividades_lines" t-as="acl">
                                    <t t-if="(contaaaa % 2) == 0">
                                        <tr >
                                            <td  style="border: 1px solid black; ">
                                                <span t-field="acl.name" />
                                            </td>
                                            <td  style="border: 1px solid black; ">
                                                <span t-field="acl.status" />
                                            </td>
                                        </tr>
                                    </t>
                                    <t t-if="(contaaaa % 2) == 1">
                                        <tr>
                                            <td  style="border: 1px solid black; ">
                                                <span t-field="acl.name" />
                                            </td>
                                            <td  style="border: 1px solid black; ">
                                                <span t-field="acl.status" />
                                            </td >
                                        </tr>
                                    </t>
                                    <t t-set="contaaaa" t-value="contaaaa + 1"/>
                                </t>
                            </table>                            
                        </div>
                    </t>
                </t>
            </t>
        </template>
        <report
            string="Orden del día"
            id="reporte_orden_dia"
            model="minutas.xmarts"
            report_type="qweb-pdf"
            name="minutas.reporte_orden"
            file="minutas.reporte_orden"
        />

        <record id="minuta_email_orden" model="mail.template">
            <field name="name">Email Orden del Día</field>
            <field name="email_from">${object.company_id and object.company_id.email}</field>
            <field name="subject">Orden del dia ${object.name}</field>
            <field name="email_to">${object.emails}</field>
            <field name="lang">${object.lang}</field>
            <field name="model_id" ref="minutas.model_minutas_xmarts"/>
            <field name="auto_delete" eval="True"/>
            <field name="report_template" ref="minutas.reporte_orden_dia"/>
            <field name="report_name">${object.name}_Orden</field>
            <field name="body_html" type="html">
                <p>Orden del día</p>
                <p>Este es un recordatorio para revisar asuntos relacionados con el proyecto ${object.proyecto.name}</p>
                <table>
                    <tr>
                        <th style="border: 1px solid black; background-color: white;   width: 15%;">
                            Fecha:
                        </th>
                        <td style="border: 1px solid black; width: 35%;">
                            <span>${object.fecha_hora}</span>
                        </td>
                    </tr>
                    <tr><td colspan="2"><br/></td></tr>
                    <tr>
                        <th style="border: 1px solid black; background-color: white;   width: 15%;">
                            Proyecto:
                        </th>
                        <td style="border: 1px solid black; width: 25%;">
                            <span>${object.proyecto.name}</span>
                        </td>
                    </tr>
                    <tr><td colspan="2"><br/></td></tr>
                    <tr>
                        <th style="border: 1px solid black; background-color: white;  ">
                            Sede:
                        </th>
                        <td style="border: 1px solid black;">
                            <span>${object.referencia}</span>
                        </td>
                    </tr>
                </table>
            </field>
        </record>


        <record id="minuta_email_minuta" model="mail.template">
            <field name="name">Email Minuta</field>
            <field name="email_from">${object.company_id and object.company_id.email}</field>
            <field name="subject">${object.name}</field>
            <field name="email_to">${object.emails}</field>
            <field name="lang">${object.lang}</field>
            <field name="model_id" ref="minutas.model_minutas_xmarts"/>
            <field name="auto_delete" eval="True"/>
            <field name="report_template" ref="minutas.reporte_minutas"/>
            <field name="report_name">${object.name}_Minuta</field>
            <field name="body_html" type="html">
                <p>Minuta</p>
                <p>Minuta ${object.name} relacionada al proyecto ${object.proyecto.name}</p>
                <table>
                    <tr>
                        <th style="border: 1px solid black; background-color: white;   width: 15%;">
                            Fecha:
                        </th>
                        <td style="border: 1px solid #CCCCCC; width: 35%;">
                            <span>${object.fecha_hora}</span>
                        </td>
                    </tr>
                    <tr><td colspan="2"><br/></td></tr>
                    <tr>
                        <th style="border: 1px solid black; background-color: white;   width: 15%;">
                            Proyecto:
                        </th>
                        <td style="border: 1px solid #CCCCCC; width: 25%;">
                            <span>${object.proyecto.name}</span>
                        </td>
                    </tr>
                    <tr><td colspan="2"><br/></td></tr>
                    <tr>
                        <th style="border: 1px solid black; background-color: white;  ">
                            Sede:
                        </th>
                        <td style="border: 1px solid #CCCCCC;">
                            <span>${object.referencia}</span>
                        </td>
                    </tr>
                </table>
                

            </field>
        </record>
    </data>
</odoo>
